@model SwiftPMModel.Department

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


<div class="content-page">
    <!-- Start content -->
    <div class="content">
        <div class="container-fluid">
            <!-- Page-Title -->
            <div class="row">
                <div class="col-sm-12">
                    <div class="page-title-box">
                        <h4 class="page-title">Create a Staff</h4>
                        <ol class="breadcrumb float-right">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item"><a href="#">Staffs</a></li>
                            <li class="breadcrumb-item active">Create Staff</li>
                        </ol>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-6">
                    <div class="card-box">
                        <h4 class="header-title m-t-0">Staff Form</h4>
                        <p class="text-muted font-14 m-b-20">
                            Create a Department of your oganization create corresponding units when done
                            </p>
                        <form action="@Url.Action("Create","Departments")" method="post">
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary()


                            <div class="form-group">
                                <label for="userName">Department Code<span class="text-danger">*</span></label>

                                @Html.TextBoxFor(m => m.DeptCode, new { @class = "form-control", placeholder = "Select_Title", id = "DeptCode" })

                                @Html.ValidationMessageFor(m => m.DeptCode, null, new { @class = "text-danger" })
             
                            </div>


                            <div class="form-group">
                                <label for="userName">Department Head<span class="text-danger">*</span></label>

                                @Html.TextBoxFor(m => m.DepartmentHead, new { @class = "form-control", placeholder = "Enter Department Head Name", id = "DepartmentHead" })

                                @Html.ValidationMessageFor(m => m.DepartmentHead, null, new { @class = "text-danger" })
                               
                            </div>                           

                            <div class="form-group">
                                <label for="userName">Dapartment Name<span class="text-danger">*</span></label>

                                @Html.TextBoxFor(m => m.DeptName, new { @class = "form-control", placeholder = "Enter Department Name", id = "DeptName" })

                                @Html.ValidationMessageFor(m => m.DeptName, null, new { @class = "text-danger" })                             
                            </div>

                            <div class="form-group text-right m-b-0">
                                <button class="btn btn-primary waves-effect waves-light" type="submit">
                                    Submit
                                </button>
                                <button type="reset" class="btn btn-secondary waves-effect m-l-5">
                                    Cancel
                                </button>
                            </div>
                        </form>

                        <!--End of Staff Creation Form-->
                    </div> <!-- end card-box -->
                </div>
