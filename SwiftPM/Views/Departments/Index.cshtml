@model IEnumerable<SwiftPMModel.Department>


<!-- Start right Content here -->
<!-- ============================================================== -->
<div class="content-page">
    <!-- Start content -->
    <div class="content">
        <div class="container-fluid">
            <!-- Page-Title -->
            <div class="row">
                <div class="col-sm-12">
                    <div class="page-title-box">
                        <h4 class="page-title">Company Departments</h4>
                        <ol class="breadcrumb float-right">
                            <li class="breadcrumb-item"><a href="#">SwiftPM</a></li>
                            <li class="breadcrumb-item"><a href="#">Departments</a></li>
                            <li class="breadcrumb-item active">List</li>
                        </ol>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>

            <!-- Begin row -->

            <div class="row">
                <div class="col-12">
                    <div class="card-box table-responsive">
                        <h4 class="m-t-0 header-title"><b>List Of Departments</b></h4>
                        <p class="text-muted font-13 m-b-30">
                            All departments of the our organization.
                        </p>
                        <table id="deptdatatable" class="table table-striped table-bordered" cellspacing="0">
                            <thead>

                                <tr>
                                    <th>
                                        Dept Code
                                    </th>

                                    <th>
                                        Dept Name
                                    </th>
                                    <th>
                                        Department Head
                                    </th>
                                    <th>
                                        Action
                                    </th>
                                </tr>

                            </thead>


                        </table>
                    </div>
                </div>
            </div>
            <!-- End row -->
            <!--End of Datatable -->


        </div>
        <!-- end container -->
    </div>
    <!-- end content -->
    @Html.Partial("~/Views/Shared/BackEndPartials/_Footer.cshtml")
</div>
<!-- ============================================================== -->
<!-- End Right content here -->
<!-- Plugins  -->
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<!-- Required datatable js -->

<link href="~/ThemeBack/plugins/datatables/dataTables.bootstrap4.min.css" rel="stylesheet" />

<script type="text/javascript">
    $(document).ready(function () {
        $('#deptdatatable').DataTable({
            "processing": true, // for show progress bar while loading

            "ajax": {
                "url": "/Departments/GetIndex",
                "type": "get",
                "datatype": "json"
            },
            "columns": [
                { "data": "DeptCode", "autoWidth": true },
                { "data": "DeptName", "autoWidth": true },
                { "data": "DepartmentHead", "autoWidth": true },
                
                {
                    "data": "DeptName",
                    "autoWidth": true,
                    "render": function (data)
                    {
                        return '<a href="#" data-toggle="modal" data-target="#actionsList" onclick="Edit(\'' + data + '\')" >  <i class="fa fa-pencil" aria-hidden="true" >&nbsp;Edit</i></a>&nbsp;&nbsp;' +
                            '<a href="#" class="text-danger" data-toggle="modal" data-target="#actionsList"  onclick="Delete(\'' + data + '\')" ><i class="fa fa-remove" aria-hidden="true" >&nbsp;Remove<i /></a>';
                    }
                }
                //{ "data": "EmailID", "autoWidth": true },
                //{ "data": "Phone", "autoWidth": true },
            ]
        });
        window.alert("hello");


    });

</script>
