@{
    Layout = "~/Views/Shared/_BackEnd.cshtml";
}

<!--Right Content-->


<div class="content-page">
    <!-- Start content -->
    <div class="content">
        <div class="container-fluid">
            <!-- Page-Title -->
            <div class="row">
                <div class="col-sm-12">
                    <div class="page-title-box">
                        <h4 class="page-title">Welcome !</h4>
                        <ol class="breadcrumb float-right">
                            <li class="breadcrumb-item"><a href="#">SwiftPm</a></li>
                            <li class="breadcrumb-item active">Dashboard</li>
                        </ol>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-6 col-lg-3">
                    <div class="widget-simple-chart text-right card-box">
                        <div class="circliful-chart" data-dimension="90" data-text="35%" data-width="5" data-fontsize="14" data-percent="35" data-fgcolor="#5fbeaa" data-bgcolor="#ebeff2"></div>
                        <h3 class="text-success counter m-t-10">@ViewBag.ProjCount</h3>
                        <p class="text-muted text-nowrap m-b-10" style=""><strong>Total Projects </strong>  </p>
                    </div>
                </div>
                <div class="col-sm-6 col-lg-3">
                    <div class="widget-simple-chart text-right card-box">
                        <div class="circliful-chart" data-dimension="90" data-text="75%" data-width="5" data-fontsize="14" data-percent="75" data-fgcolor="#3bafda" data-bgcolor="#ebeff2"></div>
                        <h3 class="text-primary counter m-t-10"> @ViewBag.ProjModulecount</h3>
                        <p class="text-muted text-nowrap m-b-10"><strong>Total Project Modules</strong> </p>
                    </div>
                </div>
                <div class="col-sm-6 col-lg-3">
                    <div class="widget-simple-chart text-right card-box">
                        <div class="circliful-chart" data-dimension="90" data-text="58%" data-width="5" data-fontsize="14" data-percent="58" data-fgcolor="#f76397" data-bgcolor="#ebeff2"></div>
                        <h3 class="text-pink m-t-10"><span class="counter">@ViewBag.ModuleTaskCount</span></h3>
                        <p class="text-muted text-nowrap m-b-10"> <strong> Total Modules Tasks </strong></p>
                    </div>
                </div>
                <div class="col-sm-6 col-lg-3">
                    <div class="widget-simple-chart text-right card-box">
                        <div class="circliful-chart" data-dimension="90" data-text="49%" data-width="5" data-fontsize="14" data-percent="49" data-fgcolor="#98a6ad" data-bgcolor="#ebeff2"></div>
                        <h3 class="text-pink m-t-10">@ViewBag.ModuleTaskIssuesCount</h3>
                        <p class="text-muted text-nowrap m-b-10"><strong>Total Module Tasks Issues</strong>  </p>
                    </div>
                </div>
            </div>
            <!-- end row -->
            <!-- Another Row of details-->
            <div class="row">
                <div class="col-sm-6 col-lg-3">
                    <div class="widget-simple-chart text-right card-box">
                        <div class="circliful-chart" data-dimension="90" data-text="35%" data-width="5" data-fontsize="14" data-percent="35" data-fgcolor="#5fbeaa" data-bgcolor="#ebeff2"></div>
                        <h3 class="text-success counter m-t-10">@ViewBag.TaskActivityCount</h3>
                        <p class="text-muted text-nowrap m-b-10" style=""><strong>Total Task Created </strong>  </p>
                    </div>
                </div>
                <div class="col-sm-6 col-lg-3">
                    <div class="widget-simple-chart text-right card-box">
                        <div class="circliful-chart" data-dimension="90" data-text="75%" data-width="5" data-fontsize="14" data-percent="75" data-fgcolor="#3bafda" data-bgcolor="#ebeff2"></div>
                        <h3 class="text-primary counter m-t-10"> @ViewBag.AssignedTaskCount</h3>
                        <p class="text-muted text-nowrap m-b-10"><strong> Total Task Assigned</strong> </p>
                    </div>
                </div>
                <div class="col-sm-6 col-lg-3">
                    <div class="widget-simple-chart text-right card-box">
                        <div class="circliful-chart" data-dimension="90" data-text="58%" data-width="5" data-fontsize="14" data-percent="58" data-fgcolor="#f76397" data-bgcolor="#ebeff2"></div>
                        <h3 class="text-pink m-t-10"><span class="counter">@ViewBag.CompletedTask @*@ViewBag.TaskIssuesCount*@</span></h3>
                        <p class="text-muted text-nowrap m-b-10"> <strong> Total Completed Task </strong></p>
                    </div>
                </div>
                <div class="col-sm-6 col-lg-3">
                    <div class="widget-simple-chart text-right card-box">
                        <div class="circliful-chart" data-dimension="90" data-text="49%" data-width="5" data-fontsize="14" data-percent="49" data-fgcolor="#98a6ad" data-bgcolor="#ebeff2"></div>
                        <h3 class="text-inverse counter m-t-10">@ViewBag.StaffCount</h3>
                        <p class="text-muted text-nowrap m-b-10"><strong>Total Staffs of Department </strong>  </p>
                    </div>
                </div>
            </div>

            <!--End Rows of Details-->

            <div class="row">
                <div class="col-lg-4">
                    <div class="card-box">
