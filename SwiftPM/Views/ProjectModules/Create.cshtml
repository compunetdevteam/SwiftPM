@model SwiftPMModel.ProjectModule

@{
    ViewBag.Title = "Create";
}


<div class="content-page">
    <!-- Start content -->
    <div class="content">
        <div class="container-fluid">
            <!-- Page-Title -->
            <div class="row">
                <div class="col-sm-12">
                    <div class="page-title-box">
                        <h4 class="page-title">Project Module </h4>
                        <ol class="breadcrumb float-right">
                            <li class="breadcrumb-item"><a href="#">SwiftPM </a></li>
                            <li class="breadcrumb-item"><a href="#">Project </a></li>
                            <li class="breadcrumb-item active">Project Module</li>
                        </ol>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-6">
                    <div class="card-box">
                        <h4 class="header-title m-t-0">Staff Form</h4>
                        <p class="text-muted font-14 m-b-20">
                            Assign a Staff to a Department.
                        </p>
                        <form action="@Url.Action("Create","ProjectModules")" method="post">
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary()


                            <div class="form-group">
                                <label for="userName">Project Id <span class="text-danger">*</span></label>

                                @Html.DropDownList("ProjectId", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.ProjectId, "", new { @class = "text-danger" })
                            </div>


                            <div class="form-group">
                                <label for="userName">Module Name<span class="text-danger">*</span></label>

                                @Html.TextBoxFor(m => m.ModuleName, new { @class = "form-control", PlaceHolder = "Enter Project Module Name" })
                                @Html.ValidationMessageFor(model => model.ModuleName, "", new { @class = "text-danger" })

                            </div>
                            <div class="form-group">
                                <label for="userName">Priority Level<span class="text-danger">*</span></label>

                                @Html.TextBoxFor(m => m.PriorityLevel, new { @class = "form-control", PlaceHolder = "Enter Project Module Name" })
                                @Html.ValidationMessageFor(model => model.PriorityLevel, "", new { @class = "text-danger" })

                            </div>
                         
                            <div class="form-group">
                                <label for="userName"> Percentage<span class="text-danger">*</span></label>

                                @Html.TextBoxFor(m => m.ModulePercentage, new { @class = "form-control", PlaceHolder = "Enter Project Module Name" })
                                @Html.ValidationMessageFor(m => m.ModulePercentage, null, new { @class = "text-danger" })
                            </div>      

                            <div class="form-group text-right m-b-0">
                                <button class="btn btn-primary waves-effect waves-light" type="submit">
                                    Submit
                                </button>
                                <button type="reset" class="btn btn-secondary waves-effect m-l-5">
                                    Cancel
                                </button>
                            </div>
                        </form>

                        <!--End of Staff Creation Form-->
                    </div> <!-- end card-box -->
                </div>
