@model SwiftPM.Models.AddPhoneNumberViewModel
@{
    ViewBag.Title = "Phone Number";
}

<div class="content-page">
    <!-- Start content -->
    <div class="content">
        <div class="container-fluid">
            <!-- Page-Title -->
            <div class="row">
                <div class="col-sm-12">
                    <div class="page-title-box">
                        <h4 class="page-title">Bio Data </h4>
                        <ol class="breadcrumb float-right">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item"><a href="#">Manage Account</a></li>
                            <li class="breadcrumb-item active">Add Phone Number</li>
                        </ol>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>

            <div class="row card-box">
                <br /> <br />
                <div class="col-md-2">
                </div>
                <div class="card-box col-md-5 col-md-offset-2">
                    <h4 class="header-title m-t-0">Phone Number Management</h4>
                    <p class="text-muted font-14 m-b-20">
                        &nbsp;
                    </p>
                    <form style="margin:0 auto" action="@Url.Action("AddPhoneNumber", "Manage")" method="post">
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary()


                        <div class="form-group">
                            <label for="userName">Enter Phone New Number<span class="text-danger">*</span></label>

                            @Html.TextBoxFor(m => m.Number, new { @class = "form-control", Type = "number", Required = true, placeholder = " Entter", id = "Phonenumber" })

                            @Html.ValidationMessageFor(m => m.Number, null, new { @class = "text-danger" })

                        </div>

                        <div class="form-group text-right m-b-0">
                            <button class="btn btn-primary waves-effect waves-light" type="submit">
                                Submit
                            </button>
                            <button type="reset" class="btn btn-secondary waves-effect m-l-5">
                                Cancel
                            </button>
                        </div>
                    </form>

                    <!--End of Staff Creation Form-->
                </div> <!-- end card-box -->
                <div class="col-md-2">
                </div>

                <div class="card-box col-md-3 ">
                    <div>
                        <img src="#" alt="Phone Details" />
                    </div>
                </div>

            </div>

            </div>
        </div>
